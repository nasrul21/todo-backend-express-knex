{
  "name": "todo-backend-express-knex",
  "version": "1.0.0",
  "scripts": {
    "db:migrate": "cd server && npx knex migrate:latest",
    "client": "cd client && yarn start",
    "server": "cd server && nodemon server.ts",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test": "cd server && jest",
    "test:watch": "cd server && jest --watch",
    "start": "cd server && node dist/server.js"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.9",
    "pg": "^8.14.1",
    "supertest": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
